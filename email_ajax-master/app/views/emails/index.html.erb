
<%= link_to "Recevoir un email", emails_path, method: "post", remote: true, class: "btn btn-primary" %>

<div class="container">
  <div class="row">
    <div class="col">
      <table class="table table-striped table-hover table-sm">
      <thead>
          <tr>
          <th scope="col" class = 'text-center' style="width: 20%">Liste des Emails</th>
          
          <th style="width: 100%">Email Sélectionné</th>
          </tr>
      </thead>
      <tbody>
          <tr id="emails">
            <% @emails.each do |email| %>
            <td>
              <%= link_to email.object, email_path(email.id), method: "get", remote: true %>
            </td>
            <td id="body-<%= email.id %>">
              <%= email.body%> 
            </td>
          </tr>
          <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>
